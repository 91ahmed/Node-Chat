extends  ../layout/layout.pug

block content
    div(class="sign-page")
        div(class="container")
            div(class="row sign-content")
                div(class="col-12")
                    div(class="sign-header")
                        h1 Welcome back
                        p Sign in to your account

                    form(action="" method="POST")

                        div(class="form-group")
                            label(for="email") E-mail
                            input(type="email" placeholder="E-mail" name="email" class="form-control")

                        div(class="form-group")
                            label(for="password") Password
                            input(type="password" placeholder="xxxxxxxx" name="password" class="form-control")

                        div(class="form-group")
                            button(type="submit" class="btn btn-success btn-block") Sign in

                        div(class="sign-footer")
                            a(href="register") Create new account?

                    

