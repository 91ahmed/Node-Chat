extends layout/layout.pug

block content
    // Navbar
    div(class="fixed-navbar")
        nav(class="navbar navbar-expand-lg navbar-dark bg-dark")
            a(class="navbar-brand" href="javascript:{}")
                div(class="user-avatar")
                p(class="user-name")
            button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
                i(class="lni lni-menu" style="color:#7a7979 !important;font-size: 19px;border:0 !important;")
                // span(class="navbar-toggler-icon")

            div(class="collapse navbar-collapse" id="navbarSupportedContent")
                ul(class="navbar-nav mr-auto")
                    li(class="nav-item active")
                        a(class="nav-link" href="logout")
                            i(class="fa-solid fa-arrow-right-from-bracket") &nbsp;
                            | Logout

    div(class="chat")
        div(class="container p-0")
            div(class="chat-content")
                div(class="side-overlay")

                div(class="chat-box-container")
                    // Chat messages here
                    div(class="row chat-box")
                        div(class="col-12")
                            div(class="chat-image" style="background-image:url(../images/avatars/boy_2.png);")
                            div(class="card")
                                div(class="card-body")
                                    h5(class="card-title chat-title") Ahmed Hassan &nbsp;
                                        small
                                            | (owner)
                                    p(class="card-text chat-text")
                                        | Hello!
                                        b
                                            span(class="welcome-user")
                                        | &nbsp; ‚ù§
                                        br
                                        | welcome to my chat
                        small(class="currentDateTime")
                            | 1/20/2021, 3:56:19 AM

                // Message Form
                div(class="text-box")
                    form(action="/chat/send" method="POST" class="chat-form")
                        div(class="typing-alert")
                        div(class="row m-0 p-2")
                            div(class="col-10")
                                textarea(placeholder="Type your message..." name="message" class="form-control message")
                            div(class="col-2")
                                button(type="submit" class="btn btn-info" style="background-color:#3A8CF4;")
                                    i(class="fa-regular fa-paper-plane") 

    audio(controls hidden id="chat-audio")
        source(src="audio/ringtone.mp3" type="audio/mpeg")